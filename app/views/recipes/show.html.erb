<div class="box">
<div class="row">
  <div class="col-sm-8">
  	<h1 class="text-center"><%= @recipe.name %></h1>
  	<p class="text-center"><%= Love.where(recipe_id: @recipe.id ).length %> people have loved this recipe</p>
  	<p class="text-center">Recipe by: <a href="/users/<%= @recipe.user_id %>"><%= User.find_by(id: @recipe.user_id).name %></a> </p>

  	<p class="text-center">Price: $<%= @recipe.price %></p>
  	<br>
  	<p class="text-center">
  		"<%= @recipe.description %>"
  	</p>
  </div>
  <div class="col-sm-4">
  	<img src="<%= @recipe.image %>">
  </div>

</div>

<div class="col-sm-12">
  	<h3>Ingredients</h3>
	<p><%= @recipe.ingredients %></p>
 </div>
<hr>


<div class="col-sm-12">
  	<h3>Directions</h3>
	  <p>Prep time: <%= @recipe.prep_time %> |
	 Cook time: <%= @recipe.cook_time %> |
	 Serving Size: <%= @recipe.servings %> |
	 Course: <%= @recipe.course %></p>

 </div>


<div class="col-sm-12">
  	<h3><%= @recipe.directions %></h3>
	 

 </div>

 

<%= link_to "delete", recipe_path(@recipe), method: :delete, data: {confirm: "Really delete the recipe?"} %><br>
<%= link_to "edit", edit_recipe_path(@recipe) %><br>
<%= link_to "<< Back to Recipes List", recipes_path %>
</div>