<h1 class="box-small text-center">All Recipes</h1>

<div class="container">
 <div class="row">
  <% @recipes.each do |recipe| %>
  <div class="col-sm-4 col-lg-4 col-md-4">
  <div><h3 class="box-small text-center"><a href="/recipes/<%= recipe.id %>"><%= recipe.name%></a></h3>
    <div class="thumbnail food-image">
      <div class="caption" style="height: 250px";>
       <h2 class="pull-right">
       <form action="/recipes" method="POST">
         <h3><%= Love.where(recipe_id: recipe.id ).length %><input id="recipe-heart" class="fa fa-heart-o" type="button" value="♥️"></h3>
         </form>

       </h2>
       <h4 class="center">
      </h4>
    </div>
    </div>

    <br>
  </div>
</div>
<% end %>
</div>

<%= link_to "Create a New Recipe", new_recipe_path, class: "new_recipe" %>
