<%= form_for(@recipe) do |f| %>
<ul>
  <% @recipe.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
</ul>
<p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :prep_time %><br />
  <%= f.text_area :prep_time %>
</p>
<p>
  <%= f.label :cook_time %><br />
  <%= f.text_area :cook_time %>
</p>
<p>
  <%= f.label :ingredients %><br />
  <%= f.text_area :ingredients %>
</p>
<p>
  <%= f.label :price %><br />
  <%= f.text_area :price %>
</p>
<p>
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :directions %><br />
  <%= f.text_area :directions %>
</p>
<p>
  <%= f.label :servings %><br />
  <%= f.text_area :servings %>
</p>
<p>
  <%= f.label :course %><br />
  <%= f.select :course, ['Appetizer', 'Soup', 'Salad', 'Entree', 'Dessert'] %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
